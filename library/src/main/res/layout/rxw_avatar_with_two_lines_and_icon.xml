<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_height="@dimen/rxw_avatar_with_two_lines_and_icon_tile_height"
    android:layout_width="match_parent">

    <ImageView
        android:id="@+id/image_view_1"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/rxw_avatar_with_two_lines_and_icon_avatar_start_padding"
        android:layout_width="wrap_content"/>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/rxw_avatar_with_two_lines_and_icon_text_start_padding"
        android:layout_width="match_parent">

        <RelativeLayout
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:layout_width="match_parent">

            <LinearLayout
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/rxw_avatar_with_two_lines_and_icon_text_end_padding"
                android:layout_toEndOf="@+id/image_button"
                android:layout_width="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_1"
                    android:alpha=".87"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:lines="1"
                    android:text="@string/rxw_two_line_item"
                    style="@style/AvatarTwoLinesPrimaryText"/>

                <TextView
                    android:id="@+id/text_view_2"
                    android:alpha=".54"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:lines="1"
                    android:text="@string/rxw_secondary_text"
                    style="@style/AvatarTwoLinesSecondaryText"/>

            </LinearLayout>

            <ImageButton
                android:id="@+id/image_button"
                android:alpha=".54"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/rxw_avatar_with_two_lines_and_icon_icon_end_padding"
                android:minHeight="32dp"
                android:minWidth="32dp"
                android:layout_width="wrap_content"
                style="@style/Widget.AppCompat.Button.Borderless"/>

        </RelativeLayout>

        <View
            android:id="@+id/list_item_separator"
            android:alpha=".12"
            android:background="@android:color/black"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/rxw_list_divider_height"
            android:layout_width="match_parent"/>

    </RelativeLayout>

</RelativeLayout>